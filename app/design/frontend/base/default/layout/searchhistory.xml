<layout version="0.1.0">  
	<cms_index_index>
		<reference name="head">
			<action method="addItem" ifconfig="pa_searchsetting/pa_searchhistory/enable"><type>skin_css</type><name>css/netsol/searchhistory/owl.carousel.css</name></action>
			<action method="addItem" ifconfig="pa_searchsetting/pa_searchhistory/enable"><type>skin_css</type><name>css/netsol/searchhistory/owl.theme.css</name></action>	
			<action method="addItem" ifconfig="pa_searchsetting/pa_searchhistory/enable"><type>skin_css</type><name>css/netsol/searchhistory/searchhistory.css</name></action>
			<action method="addItem" ifconfig="pa_searchsetting/pa_searchhistory/enabled_jquery"><type>skin_js</type><name>js/netsol/searchhistory/jquery-1.10.2.min.js</name></action>
			<action method="addItem" ifconfig="pa_searchsetting/pa_searchhistory/enable"><type>skin_js</type><name>js/netsol/searchhistory/noconflict.js</name></action>
			<action method="addItem" ifconfig="pa_searchsetting/pa_searchhistory/enable"><type>skin_js</type><name>js/netsol/searchhistory/owl.carousel.js</name></action>
		</reference>
		<reference name="content">
			<block type="searchhistory/searchhistory" name="pasearch" as="pasearch" template="searchhistory/pasearchhistory.phtml" />
		</reference>
	</cms_index_index>
</layout>   
